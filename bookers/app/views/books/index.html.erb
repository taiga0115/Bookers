<h1>Books</h1>
<table>
  <tr>
  <th>Title</th>
  <th>Body</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
  <td><%= book.title %></td><td><%= book.body %></td>
  <td><span>
  <%= link_to 'Show', book_path(book.id) %>
  </span></td> <td><span>
  <%= link_to 'Edit', edit_book_path(book.id) %>
  </span></td> <td><span>
  <%= link_to 'Destroy', book_path(book.id),method: :delete %>
  </span></td>
  </tr>
  <% end %>
  </table>


